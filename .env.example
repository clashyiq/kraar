# Teacher AI Enhanced - Environment Variables
# تطبيق المدرس AI المحسن - متغيرات البيئة
# Copy this file to .env and update the values

# Application Configuration
FLASK_APP=app.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-here-change-this-in-production

# Database Configuration
DATABASE_URL=sqlite:///teacher_ai_enhanced.db
# For PostgreSQL (production):
# DATABASE_URL=postgresql://username:password@localhost:5432/teacher_ai_enhanced

# AI Service API Keys
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# AI Model Configuration
OPENAI_MODEL=gpt-3.5-turbo
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Cache Configuration (optional)
REDIS_URL=redis://localhost:6379/0

# Logging Configuration
LOG_LEVEL=INFO

# File Upload Configuration
MAX_CONTENT_LENGTH=16777216
UPLOAD_FOLDER=uploads

# Security Configuration (for production)
SESSION_COOKIE_SECURE=false
WTF_CSRF_ENABLED=true

# Server Configuration
PORT=5000
HOST=0.0.0.0

# Arabic Language Configuration
DEFAULT_LANGUAGE=ar
ENABLE_ARABIC_NLP=true
ENABLE_ARABIC_SPEECH=true

# Performance Configuration
CACHE_TIMEOUT=300
PAGINATION_SIZE=20

# Development Configuration
DEBUG_TOOLBAR=false

# Production Configuration (uncomment for production)
# FLASK_ENV=production
# SESSION_COOKIE_SECURE=true
# WTF_CSRF_ENABLED=true
# LOG_LEVEL=WARNING

# Heroku Configuration (if deploying to Heroku)
# DATABASE_URL will be automatically set by Heroku
# REDIS_URL will be automatically set by Heroku Redis addon

# Docker Configuration
# DATABASE_HOST=db
# DATABASE_PORT=5432
# REDIS_HOST=redis
# REDIS_PORT=6379
